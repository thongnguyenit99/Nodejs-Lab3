<style>
    .ct {
        justify-content: center;
        margin-left: 17%;
        border: 1.5px solid whitesmoke;
    }
</style>
<div style="text-align: center;" ><h5 class="ml-5 mb-5"style="color: crimson;" >SỬA THÔNG TIN TÀI KHOẢN</h5></div>
<form method="POST" action="/admin/profile" class="col-8 ct" style="width: 100%;" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputSuccess" class="mt-3">Tài khoản</label>
        <input type="text" class="form-control" id="exampleInputSuccess" name="f_Username"
            value="{{this.accountAdmin.f_Username}}">
    </div>
    <div class="form-group">
        <label for="exampleInputFail">Mật khẩu</label>
        <input type="password" class="form-control" id="exampleInputFail" name="f_Password"
            value="{{this.accountAdmin.f_Password}}">
    </div>
    <div class="form-group">
        <label for="exampleInputFail">Họ tên</label>
        <input type="text" class="form-control" id="exampleInputFail" name="f_Name"
            value="{{this.accountAdmin.f_Name}}">
    </div>
    <div class="form-group">
        <label for="exampleInputFail">Phone</label>
        <input type="text" class="form-control" id="exampleInputFail" name="f_Phone"
            value="{{this.accountAdmin.f_Phone}}">
    </div>
    <div class="form-group">
        <label for="exampleInputFail">Avatar</label>
        <div>
            <img src="/uploads/{{this.accountAdmin.f_Avatar}}" alt=""
                style="width: 100px;margin: 10px;border-radius: 1%;margin-left: 0;">
        </div>
        <input type="file" class="form-control" id="exampleInputFail" name="f_Avatar">
    </div>
    <div class="form-group">
        <label for="exampleInputFail">Email</label>
        <input type="text" class="form-control" id="exampleInputFail" name="f_Email"
            value="{{this.accountAdmin.f_Email}}">
    </div>
    <div class="form-group">
        <input type="hidden" class="form-control" id="exampleInputFail" name="f_Permission"
            value="{{this.accountAdmin.f_Permission}}">
    </div>
    {{#if this.success}}
    <div class="form-group">
        <input type="text" class="form-control" id="exampleInputFail" name="titlesuccess" readonly
            value="{{this.success}}">
    </div>
    {{/if}}
    <button type="submit" class="btn btn-primary mb-5 mt-4">Chấp Nhận</button>
</form>